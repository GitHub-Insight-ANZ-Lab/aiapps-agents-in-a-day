@{
    ViewData["Title"] = "Player Registration";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3 class="text-center">Player Registration</h3>
            </div>
            <div class="card-body">
                @if (ViewBag.Success == true)
                {
                    <div class="alert alert-success">
                        <h5>Registration Successful!</h5>
                        <p><strong>Player Name:</strong> @ViewBag.PlayerName</p>
                        <p><strong>Your Player ID:</strong> <span class="badge bg-primary fs-6">@ViewBag.PlayerId</span></p>
                        <p class="mb-2">@ViewBag.Message</p>
                        <hr>
                        <p class="text-muted"><strong>Important:</strong> Save your Player ID! You'll need it to participate in rounds.</p>
                        <div class="d-grid gap-2">
                            <a href="/Home/Play" class="btn btn-success">Go to Game Page</a>
                            <a href="/" class="btn btn-outline-primary">Back to Dashboard</a>
                        </div>
                    </div>
                }
                else
                {
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["Error"]
                        </div>
                    }

                    <form method="post">
                        <div class="mb-3">
                            <label for="playerName" class="form-label">Enter Your Name</label>
                            <input type="text" class="form-control" id="playerName" name="playerName" 
                                   placeholder="Your name..." required maxlength="50">
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Register to Play</button>
                        </div>
                    </form>

                    <hr>
                    <div class="text-center">
                        <small class="text-muted">Already registered? <a href="/Home/Play">Go to Game Page</a></small>
                    </div>
                }
            </div>
        </div>
    </div>
</div>