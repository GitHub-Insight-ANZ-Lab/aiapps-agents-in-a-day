@model RpsGameServer.Models.Tournament
@{
    ViewData["Title"] = "Tournament Dashboard";
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h3>Tournament Status: @Model.Status</h3>
            </div>
            <div class="card-body">
                @if (Model.Status == RpsGameServer.Models.TournamentStatus.Pending)
                {
                    <div class="text-center">
                        <p class="lead">Tournament is waiting for players to join!</p>
                        <a href="/Home/TournamentWaiting" class="btn btn-primary btn-lg">
                            <i class="fas fa-users"></i> View Tournament Lobby
                        </a>
                    </div>
                }
                else if (Model.Status == RpsGameServer.Models.TournamentStatus.InProgress)
                {
                    <p>Current Round: @Model.CurrentRound / @RpsGameServer.Models.Tournament.MaxRounds</p>
                    
                    @if (Model.Rounds.Any() && Model.CurrentRound <= RpsGameServer.Models.Tournament.MaxRounds)
                    {
                        var currentRound = Model.Rounds.FirstOrDefault(r => r.RoundNumber == Model.CurrentRound);
                        if (currentRound != null)
                        {
                            <div class="mt-3">
                                <h5>Round @currentRound.RoundNumber Status: @currentRound.Status</h5>
                                
                                @if (currentRound.Status == RpsGameServer.Models.RoundStatus.Pending)
                                {
                                    <p>Click to start round @currentRound.RoundNumber with a random question.</p>
                                    <form method="post" asp-action="StartRound" class="mt-2">
                                        <input type="hidden" name="roundNumber" value="@currentRound.RoundNumber" />
                                        <button type="submit" class="btn btn-success">Start Round @currentRound.RoundNumber</button>
                                    </form>
                                }
                                else if (currentRound.Status == RpsGameServer.Models.RoundStatus.InProgress)
                                {
                                    <!-- Enhanced Round Display -->
                                    <div class="question-display p-4 mb-4" style="background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%); border-radius: 15px; border: 3px solid #007bff;">
                                        <div class="question-header mb-3">
                                            <h4 class="text-primary mb-2">
                                                <i class="fas fa-question-circle"></i> Round @currentRound.RoundNumber Question
                                            </h4>
                                            <span class="badge bg-info question-type-badge">@currentRound.QuestionType.ToString().ToUpper()</span>
                                        </div>
                                        
                                        <!-- Question Text - Large and Prominent -->
                                        <div class="question-text mb-4">
                                            <h2 class="display-6 text-dark fw-bold">@currentRound.Question</h2>
                                        </div>
                                        
                                        <!-- Media Content Display -->
                                        @if (!string.IsNullOrEmpty(currentRound.MediaUrl))
                                        {
                                            <div class="media-content mb-4 text-center">
                                                @if (currentRound.QuestionType == RpsGameServer.Models.QuestionType.Image)
                                                {
                                                    <div class="image-container">
                                                        <img src="@currentRound.MediaUrl" alt="Question Image" 
                                                             class="img-fluid rounded shadow" 
                                                             style="max-height: 400px; border: 2px solid #dee2e6;" 
                                                             onerror="this.style.display='none'; this.nextElementSibling.style.display='block';" />
                                                        <div style="display: none;" class="alert alert-warning">
                                                            <i class="fas fa-image"></i> 
                                                            Image not found. <a href="@currentRound.MediaUrl" target="_blank" class="alert-link">Click here to view image</a>
                                                        </div>
                                                    </div>
                                                }
                                                else if (currentRound.QuestionType == RpsGameServer.Models.QuestionType.Audio)
                                                {
                                                    <div class="audio-container">
                                                        <div class="mb-3">
                                                            <i class="fas fa-volume-up fa-2x text-success"></i>
                                                            <h5 class="mt-2">Audio Content</h5>
                                                        </div>
                                                        <audio controls class="w-100 mb-3" style="max-width: 500px;">
                                                            <source src="@currentRound.MediaUrl" type="audio/mpeg">
                                                            <source src="@currentRound.MediaUrl" type="audio/wav">
                                                            Your browser does not support the audio element.
                                                        </audio>
                                                        <div>
                                                            <a href="@currentRound.MediaUrl" target="_blank" class="btn btn-outline-success">
                                                                <i class="fas fa-download"></i> Download Audio
                                                            </a>
                                                        </div>
                                                    </div>
                                                }
                                                else if (currentRound.QuestionType == RpsGameServer.Models.QuestionType.Video)
                                                {
                                                    <div class="video-container">
                                                        <div class="mb-3">
                                                            <i class="fas fa-play-circle fa-2x text-danger"></i>
                                                            <h5 class="mt-2">Video Content</h5>
                                                        </div>
                                                        <video controls class="w-100 rounded shadow mb-3" style="max-width: 600px; max-height: 400px;">
                                                            <source src="@currentRound.MediaUrl" type="video/mp4">
                                                            <source src="@currentRound.MediaUrl" type="video/webm">
                                                            Your browser does not support the video element.
                                                        </video>
                                                        <div>
                                                            <a href="@currentRound.MediaUrl" target="_blank" class="btn btn-outline-danger">
                                                                <i class="fas fa-external-link-alt"></i> Open Video in New Tab
                                                            </a>
                                                        </div>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <!-- Generic media link for other types -->
                                                    <div class="generic-media">
                                                        <div class="alert alert-info">
                                                            <i class="fas fa-link"></i>
                                                            <strong>Media Content Available:</strong>
                                                            <a href="@currentRound.MediaUrl" target="_blank" class="alert-link ms-2">
                                                                Click here to access the content
                                                            </a>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        }
                                        
                                        <!-- Round Info -->
                                        <div class="round-info">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="info-card p-3 bg-light rounded">
                                                        <strong class="text-success">
                                                            <i class="fas fa-hand-rock"></i> Server Move:
                                                        </strong>
                                                        <span class="fs-5 fw-bold">@currentRound.ServerMove</span>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="info-card p-3 bg-light rounded">
                                                        <strong class="text-info">
                                                            <i class="fas fa-users"></i> Progress:
                                                        </strong>
                                                        @{
                                                            var submittedCount = currentRound.PlayerResults.Count(pr => pr.HasSubmitted);
                                                        }
                                                        <span class="fs-5 fw-bold">@submittedCount / @Model.Players.Count</span>
                                                        <small class="text-muted">players submitted</small>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <!-- End Round Button -->
                                    <form method="post" asp-action="EndRound" class="mt-2">
                                        <input type="hidden" name="roundNumber" value="@currentRound.RoundNumber" />
                                        <button type="submit" class="btn btn-warning btn-lg">
                                            <i class="fas fa-stop"></i> End Round @currentRound.RoundNumber
                                        </button>
                                    </form>
                                }
                            </div>
                        }
                        else if (Model.CurrentRound > RpsGameServer.Models.Tournament.MaxRounds)
                        {
                            <div class="mt-3">
                                <p>All rounds completed!</p>
                                <form method="post" asp-action="EndTournament" class="mt-2">
                                    <button type="submit" class="btn btn-danger">End Tournament</button>
                                </form>
                            </div>
                        }
                    }
                }
                else if (Model.Status == RpsGameServer.Models.TournamentStatus.Completed)
                {
                    <div class="text-center">
                        <h4 class="text-success">🏆 Tournament Complete! 🏆</h4>
                        <a href="/Home/GrandFinish" class="btn btn-warning btn-lg me-2">
                            <i class="fas fa-crown"></i> View Champions
                        </a>
                        <a href="/Home/Results" class="btn btn-info btn-lg">
                            <i class="fas fa-chart-bar"></i> Detailed Results
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Registered Players (@Model.Players.Count)</h5>
            </div>
            <div class="card-body">
                @if (Model.Players.Any())
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var player in Model.Players)
                        {
                            <li class="list-group-item d-flex justify-content-between">
                                <span>@player.Name</span>
                                <span class="badge bg-primary">@player.TotalScore pts</span>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-muted">No players registered yet.</p>
                }
            </div>
        </div>
        
        @if (Model.Status == RpsGameServer.Models.TournamentStatus.InProgress && Model.CurrentRound < RpsGameServer.Models.Tournament.MaxRounds - 1)
        {
            <div class="card mt-3">
                <div class="card-header">
                    <h5>Current Leaderboard</h5>
                </div>
                <div class="card-body">
                    @{
                        var leaderboard = Model.Players.OrderByDescending(p => p.TotalScore).ThenBy(p => p.Name).ToList();
                    }
                    @if (leaderboard.Any())
                    {
                        <ol class="list-group list-group-numbered">
                            @foreach (var player in leaderboard.Take(5))
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-start">
                                    <div class="ms-2 me-auto">
                                        <div class="fw-bold">@player.Name</div>
                                    </div>
                                    <span class="badge bg-primary rounded-pill">@player.TotalScore</span>
                                </li>
                            }
                        </ol>
                    }
                </div>
            </div>
        }
    </div>
</div>

<script>
    // Auto-refresh every 5 seconds during tournament
    @if (Model.Status == RpsGameServer.Models.TournamentStatus.InProgress)
    {
        <text>
        setInterval(function() {
            location.reload();
        }, 5000);
        </text>
    }
</script>