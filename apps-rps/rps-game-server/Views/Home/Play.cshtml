@{
    ViewData["Title"] = "Play Game";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h3 class="text-center">Paper-Scissors-Rock Tournament</h3>
            </div>
            <div class="card-body">
                @if (ViewBag.Success == true)
                {
                    <div class="alert alert-success">
                        <h5>Submission Successful!</h5>
                        <p>@ViewBag.Message</p>
                        <hr>
                        <p><strong>Question:</strong> @ViewBag.Question</p>
                        <p><strong>Your Answer:</strong> @ViewBag.PlayerAnswer</p>
                        <p><strong>Your Move:</strong> @ViewBag.PlayerMove</p>
                        <p><strong>Server Move:</strong> @ViewBag.ServerMove</p>
                        <hr>
                        <div class="d-grid gap-2">
                            <a href="/Home/Play" class="btn btn-primary">Submit for Next Round</a>
                            <a href="/" class="btn btn-outline-secondary">Back to Dashboard</a>
                        </div>
                    </div>
                }
                else
                {
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["Error"]
                        </div>
                    }

                    <div class="alert alert-info">
                        <h6>How to Play:</h6>
                        <ul class="mb-0">
                            <li>Enter your Player ID (received during registration)</li>
                            <li>Answer the current round's question</li>
                            <li>Choose your Paper-Scissors-Rock move</li>
                            <li>Submit to participate in the round</li>
                        </ul>
                    </div>

                    <form method="post">
                        <div class="mb-3">
                            <label for="playerId" class="form-label">Your Player ID</label>
                            <input type="number" class="form-control" id="playerId" name="playerId" 
                                   placeholder="Enter your player ID..." required min="1">
                            <div class="form-text">This was provided when you registered.</div>
                        </div>

                        <div class="mb-3">
                            <label for="answer" class="form-label">Answer the Question</label>
                            @if (ViewBag.CurrentQuestion != null)
                            {
                                <div class="alert alert-primary">
                                    <strong>Round @ViewBag.CurrentRound Question:</strong> @ViewBag.CurrentQuestion
                                </div>
                            }
                            <input type="text" class="form-control" id="answer" name="answer" 
                                   placeholder="Type your answer here..." required>
                            <div class="form-text">Answer the current round's question to earn points.</div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Choose Your Move</label>
                            <div class="row">
                                <div class="col-4">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="move" id="rock" value="Rock" required>
                                        <label class="form-check-label" for="rock">
                                            <span class="fs-2">ü™®</span><br>
                                            <strong>Rock</strong>
                                        </label>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="move" id="paper" value="Paper" required>
                                        <label class="form-check-label" for="paper">
                                            <span class="fs-2">üìÑ</span><br>
                                            <strong>Paper</strong>
                                        </label>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="move" id="scissors" value="Scissors" required>
                                        <label class="form-check-label" for="scissors">
                                            <span class="fs-2">‚úÇÔ∏è</span><br>
                                            <strong>Scissors</strong>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-lg">Submit Answer & Move</button>
                        </div>
                    </form>

                    <hr>
                    <div class="text-center">
                        <small class="text-muted">
                            Need to register? <a href="/Home/Register">Register here</a> | 
                            <a href="/">View Tournament Dashboard</a>
                        </small>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
.form-check-label {
    text-align: center;
    width: 100%;
    padding: 15px;
    border: 2px solid #dee2e6;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.2s;
}

.form-check-input:checked + .form-check-label {
    background-color: #0d6efd;
    color: white;
    border-color: #0d6efd;
}

.form-check-label:hover {
    background-color: #f8f9fa;
    border-color: #0d6efd;
}
</style>