@model List<PsrGameServer.Models.TournamentHistory>
@{
    ViewData["Title"] = "Tournament History";
}

<div class="row">
    <div class="col-12">
        <div class="card border-info">
            <div class="card-header bg-info text-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">
                        <i class="fas fa-history"></i> Tournament History
                    </h3>
                    <a href="@Url.Action("Index", "Admin")" class="btn btn-outline-light btn-sm">
                        <i class="fas fa-arrow-left"></i> Back to Admin Panel
                    </a>
                </div>
            </div>
            <div class="card-body">
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle"></i> @TempData["Success"]
                    </div>
                }
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-triangle"></i> @TempData["Error"]
                    </div>
                }

                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Started</th>
                                    <th>Ended</th>
                                    <th>Status</th>
                                    <th>Players</th>
                                    <th>Rounds</th>
                                    <th>Winner</th>
                                    <th>Score</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var tournament in Model)
                                {
                                    <tr>
                                        <td>@tournament.Id</td>
                                        <td>@tournament.StartedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                        <td>@(tournament.EndedAt?.ToString("yyyy-MM-dd HH:mm") ?? "N/A")</td>
                                        <td>
                                            <span class="badge badge-@(tournament.Status == PsrGameServer.Models.TournamentStatus.Completed ? "success" : 
                                                                      tournament.Status == PsrGameServer.Models.TournamentStatus.InProgress ? "warning" : "secondary")">
                                                @tournament.Status
                                            </span>
                                        </td>
                                        <td>@tournament.TotalPlayers</td>
                                        <td>@tournament.TotalRounds</td>
                                        <td>@(tournament.WinnerName ?? "N/A")</td>
                                        <td>@(tournament.WinnerScore?.ToString() ?? "N/A")</td>
                                        <td>
                                            <a href="@Url.Action("HistoryDetails", "Admin", new { id = tournament.Id })" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-eye"></i> Details
                                            </a>
                                            <form method="post" asp-action="DeleteTournament" asp-route-id="@tournament.Id" style="display: inline;">
                                                <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                        onclick="return confirm('Are you sure you want to delete this tournament?')">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> No tournament history found. Complete some tournaments to see them here.
                    </div>
                }
            </div>
        </div>
    </div>
</div>