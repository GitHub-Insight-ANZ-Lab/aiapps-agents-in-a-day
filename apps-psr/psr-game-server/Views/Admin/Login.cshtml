@{
    ViewData["Title"] = "Admin Login";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-warning">
                <h3 class="text-center text-dark">
                    <i class="fas fa-lock"></i> Admin Access
                </h3>
            </div>
            <div class="card-body">
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-triangle"></i> @TempData["Error"]
                    </div>
                }

                <div class="alert alert-warning">
                    <i class="fas fa-info-circle"></i> 
                    <strong>Restricted Area:</strong> Administrator passcode required to access admin functions.
                </div>

                <form method="post">
                    <div class="mb-3">
                        <label for="passcode" class="form-label">Admin Passcode</label>
                        <input type="password" class="form-control" id="passcode" name="passcode" 
                               placeholder="Enter admin passcode..." required maxlength="10">
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-key"></i> Access Admin Panel
                        </button>
                    </div>
                </form>

                <hr>
                <div class="text-center">
                    <a href="/" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Back to Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>