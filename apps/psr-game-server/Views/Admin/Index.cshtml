@model PsrGameServer.Models.Tournament
@{
    ViewData["Title"] = "Admin Panel";
}

<div class="row">
    <div class="col-12">
        <div class="card border-warning">
            <div class="card-header bg-warning text-dark">
                <div class="d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">
                        <i class="fas fa-cogs"></i> Admin Panel
                    </h3>
                    <form method="post" asp-action="Logout" style="margin: 0;">
                        <button type="submit" class="btn btn-outline-dark btn-sm">
                            <i class="fas fa-sign-out-alt"></i> Logout
                        </button>
                    </form>
                </div>
            </div>
            <div class="card-body">
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle"></i> @TempData["Success"]
                    </div>
                }
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-triangle"></i> @TempData["Error"]
                    </div>
                }

                <!-- Tournament Status -->
                <div class="row mb-4">
                    <div class="col-12">
                        <h4>Tournament Status</h4>
                        <div class="alert alert-info">
                            <strong>Status:</strong> @Model.Status<br>
                            <strong>Current Round:</strong> @Model.CurrentRound / @PsrGameServer.Models.Tournament.MaxRounds<br>
                            <strong>Total Players:</strong> @Model.Players.Count
                        </div>
                    </div>
                </div>

                <!-- Admin Actions -->
                <div class="row">
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-header">
                                <h5><i class="fas fa-redo"></i> Round Management</h5>
                            </div>
                            <div class="card-body">
                                <p class="card-text">Reset the current round, clearing all submissions and scores for this round only.</p>
                                <form method="post" asp-action="ResetCurrentRound" 
                                      onsubmit="return confirm('Are you sure you want to reset the current round? This will clear all submissions for round @Model.CurrentRound.');">
                                    <button type="submit" class="btn btn-warning">
                                        <i class="fas fa-redo"></i> Reset Current Round
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-header">
                                <h5><i class="fas fa-refresh"></i> Tournament Reset</h5>
                            </div>
                            <div class="card-body">
                                <p class="card-text">Reset the entire tournament while keeping all registered players.</p>
                                <form method="post" asp-action="ResetTournament" 
                                      onsubmit="return confirm('Are you sure you want to reset the tournament? This will clear all rounds and scores but keep registered players.');">
                                    <button type="submit" class="btn btn-danger">
                                        <i class="fas fa-refresh"></i> Reset Tournament
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-header">
                                <h5><i class="fas fa-users"></i> Player Management</h5>
                            </div>
                            <div class="card-body">
                                <p class="card-text">Manage registered players by removing them from the tournament.</p>
                                <a href="#playersSection" class="btn btn-info">
                                    <i class="fas fa-list"></i> Manage Players
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Configuration & History Management -->
                <div class="row mt-4">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h5><i class="fas fa-question-circle"></i> Questions Configuration</h5>
                            </div>
                            <div class="card-body">
                                <p class="card-text">View and configure questions for the tournament. Supports text, audio, image, and video questions.</p>
                                <a href="@Url.Action("Questions", "Admin")" class="btn btn-primary">
                                    <i class="fas fa-cog"></i> Manage Questions
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h5><i class="fas fa-history"></i> Tournament History</h5>
                            </div>
                            <div class="card-body">
                                <p class="card-text">View past tournament results, player performance, and detailed round information.</p>
                                <a href="@Url.Action("History", "Admin")" class="btn btn-success">
                                    <i class="fas fa-chart-line"></i> View History
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Players Section -->
                <div class="row mt-4" id="playersSection">
                    <div class="col-12">
                        <h4>Registered Players</h4>
                        @if (Model.Players.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Name</th>
                                            <th>Registered At</th>
                                            <th>Total Score</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var player in Model.Players.OrderBy(p => p.Id))
                                        {
                                            <tr>
                                                <td>@player.Id</td>
                                                <td>@player.Name</td>
                                                <td>@player.RegisteredAt.ToString("yyyy-MM-dd HH:mm")</td>
                                                <td>@player.TotalScore</td>
                                                <td>
                                                    <form method="post" asp-action="UnregisterPlayer" style="display: inline;"
                                                          onsubmit="return confirm('Are you sure you want to unregister @player.Name? This action cannot be undone.');">
                                                        <input type="hidden" name="playerId" value="@player.Id" />
                                                        <button type="submit" class="btn btn-danger btn-sm">
                                                            <i class="fas fa-user-times"></i> Unregister
                                                        </button>
                                                    </form>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle"></i> No players are currently registered.
                            </div>
                        }
                    </div>
                </div>

                <!-- Navigation -->
                <div class="row mt-4">
                    <div class="col-12">
                        <hr>
                        <div class="text-center">
                            <a href="/" class="btn btn-outline-primary">
                                <i class="fas fa-arrow-left"></i> Back to Dashboard
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>